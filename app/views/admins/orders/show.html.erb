<h3>注文履歴詳細</h3>

<table class="table">
    <tbody>
      <tr>
        <th>購入者</th>
        <td><%= link_to admins_customer_path(@order.customer) do %>
            <%= @order.customer.last_name %>
            <%= @order.customer.first_name %>
            <% end %>
        </td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
            <%= @order.address %>
        </td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td>
            <%= @order.payment_method %>
        </td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
            <%= form_with(model: @order, url: admins_order_path, local: true) do |f| %>
            <%= f.select :status,Order.statuses.keys.to_a %>
            <%= f.submit "更新", class: "btn btn-success" %>
            <% end %>
        </td>
      </tr>
    </tbody>
</table>
<table>
  <thead>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <!-- 製作ステータスenum実装する -->
    <th>製作ステータス</th>
  </thead>
  <tbody>
  <% @order_details.each do |order_detail| %>
   <tr>
      <td>
        <%= order_detail.item.name %>
      </td>
      <td>
        <%= form_with(model: order_detail, url: admins_order_detail_path(order_detail.id),local: true) do |f| %>
    		<%= f.hidden_field :order_id,:value => order_detail.order.id %>   
        <%= f.select :production_status,OrderDetail.production_statuses.keys.to_a %> 
        <%= f.submit "更新", class: "btn btn-success" %>
        <% end %>
      </td>
      <td>
      </td>
    </tr>
    <% end %>
    
  </tbody>
</table>
<table>
    <tr>
      <th>商品合計</th>
      <td><%= @order.total_price.to_s(:delimited) %></td>
    </tr>
    <tr>
      <th>送料</th>
      <td><%= @order.shipping_cost.to_s(:delimited) %></td>
    </tr>
    <tr>
      <th>請求⾦額合計</th>
      <td><%= (@order.total_price + @order.shipping_cost).to_s(:delimited) %></td>
    </tr>
</table>

