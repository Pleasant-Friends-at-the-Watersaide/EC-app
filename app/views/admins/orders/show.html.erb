<h3>注文履歴詳細</h3>

<table class="table">
    <tbody>
      <tr>
        <th>購入者</th>
        <td><%= link_to admins_customer_path(@order.customer) do %>
            <%= @order.customer.last_name %>
            <%= @order.customer.first_name %>
            <% end %>
        </td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
            <%= @order.address %>
        </td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td>
            <%= @order.payment_method %>
        </td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
            <%= form_with(model: @order, url: admins_order_path, local: true) do |f| %>
            <%= f.select :status,Order.statuses.keys.to_a %>
            <%= f.submit "更新", class: "btn btn-success" %>
            <% end %>
        </td>
      </tr>
    </tbody>
</table>
