<div class="container">
  <div class="row pt-3">
    <div class="col">
      <h3>注文履歴詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <table class="table table-borderless">
        <tr>
          <th>購入者</th>
          <td>
            <%= link_to admins_customer_path(@order.customer) do %>
              <%= @order.customer.last_name %>
              <%= @order.customer.first_name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
              <%= @order.address %>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td>
            <%= @order.payment_method %>
          </td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td>
            <%= form_with(model: @order, url: admins_order_path, local: true) do |f| %>
              <%= f.select :status,Order.statuses.keys.to_a %>
              <%= f.submit "更新", class: "btn btn-success" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table class="table">
        <tr class="table-active">
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td>
            <%= order_detail.item.name %>
          </td>
          <td>
            <%= (order_detail.price * 1.10).floor.to_s(:delimited) %>
          </td>
          <td>
            <%= order_detail.quantity %>
          </td>
          <td>
            <%= (order_detail.price * order_detail.quantity * 1.10).floor.to_s(:delimited) %>
          </td>
          <td>
            <%= form_with(model: order_detail, url: admins_order_detail_path(order_detail.id),local: true) do |f| %>
          		<%= f.hidden_field :order_id,:value => order_detail.order.id %>
              <%= f.select :production_status,OrderDetail.production_statuses.keys.to_a %>
              <%= f.submit "更新", class: "btn btn-success" %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <table class="table table-borderless">
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.shipping_cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>請求⾦額合計</th>
          <td><%= (@order.total_price + @order.shipping_cost).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

</div>