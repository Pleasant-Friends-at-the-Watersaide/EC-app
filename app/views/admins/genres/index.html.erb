<div class="container">
  <div class="row mt-3">
    <div class="col-12 clearfix">
      <h3>ジャンル一覧・追加</h3>
      <div id="error">
        <%= render "customers/shared/error_messages", resource: @genre %>
      </div>
      <%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
        <%= f.label"ジャンル名" %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "btn btn-sm btn-success" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <table class="table table-striped table-sm" >
        <thead>
          <tr>
            <th>ジャンル名</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-sm btn-success" %>
            </td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
