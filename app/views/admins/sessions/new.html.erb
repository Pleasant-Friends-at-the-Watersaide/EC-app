<div class="container">
  <div class="row pt-3">
    <div class="col">
      <h4>管理者ログイン</h4>
    </div>
  </div>

  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
    <div class="row mt-3">
      <div class="col">
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-sm-2 col-form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-5" %>
        </div>
        <div class="form-group row">
          <%= f.label :password, "パスワード", class: "col-sm-2 col-form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-sm-5" %>
        </div>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-md-10">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>


