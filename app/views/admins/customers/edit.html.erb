<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="head-line title_h3">
        <%= @customer.last_name + @customer.first_name %>さんの会員情報編集
      </h3>
      <div id="error">
        <%= render "customers/shared/error_messages", resource: @customer %>
      </div>

      <%= form_with model: @customer, url: admins_customer_path, local: true do |f| %>
      <div class="col-xs-10">
        <div class="form-group">
          <%= f.label :"会員ID", class: "col-xs-4 control-label" %>
          <%= f.label :"#{@customer.id}" %>
        </div>
        <div class="form-group">
          <%= f.label :"氏名", class: "col-xs-4 control-label" %>
          <%= f.text_field :last_name, class: "col-xs-4 form-control-static name" %>
          <%= f.text_field :first_name, class: "col-xs-4 form-control-static name" %>
        </div>
        <div class="form-group">
          <%= f.label :"フリガナ", class: "col-xs-4 control-label" %>
          <%= f.text_field :kana_last_name, class: "col-xs-4 form-control-static name" %>
          <%= f.text_field :kana_first_name, class: "col-xs-4 form-control-static name" %>
        </div>
        <div class="form-group">
          <%= f.label :"郵便番号", class: "col-xs-4 control-label" %>
          <%= f.text_field :postcode, class: "col-xs-4 form-control-static postcode" %>
        </div>
        <div class="form-group">
          <%= f.label :"住所", class: "col-xs-4 control-label" %>
          <%= f.text_field :address, class: "col-xs-8 form-control-static address" %>
        </div>
        <div class="form-group">
          <%= f.label :"電話番号", class: "col-xs-4 control-label" %>
          <%= f.text_field :phone_number, class: "col-xs-4 form-control-static phone_number" %>
        </div>
        <div class="form-group">
          <%= f.label :"メールアドレス", class: "col-xs-4 control-label" %>
          <%= f.text_field :email, class: "col-sm-6 form-control-static email" %>
        </div>
        <div class="form-group">
          <%= f.label :"会員ステータス", class: "col-xs-4 control-label" %>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, :"有効" %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, :"退会" %>
        </div>
        <div class="action">
          <%= f.submit "変更を保存",class: "btn btn-success" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>