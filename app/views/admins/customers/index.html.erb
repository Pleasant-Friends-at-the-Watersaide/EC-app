<div class="container">
  <div class="row pt-3">
    <div class="col-xs-12">
      <h3 class="head-line title_h3">会員一覧</h3>
        <table class="table table-hover table-borded">
          <thead>
            <tr class"info">
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td class="info col-xs-2">
                <%= customer.id =%>
              </td>
              <td class="text-left">
              <%= link_to admins_customer_path(customer), class: "btn-link" do %>
                <i class="far fas-user">
                <%= customer.last_name + " " + customer.first_name %>
                </i>
              <% end %>
              </td>
              <td class="text-left">
                <%= customer.email %>
              </td>
              <td>
                <% if customer.is_deleted == false %>
                  <p class="far fa-circle limegreen">有効</p>
                <% else %>
                  <p class="fas fa-times lightgray">退会</p>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
      <div class="text-center"><%= paginate(@customers) %></div>
  </div>
</div>