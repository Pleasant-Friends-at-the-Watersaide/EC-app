<div class="container">
  <h3 class="head-line title_h3">
    <%= @customer.last_name + @customer.first_name %>さんの会員詳細
  </h3>
  <div class="row">
    <div class="col-xs-8">
      <div class="field">
        <p>会員ID <%= @customer.id %></p>
      </div>
      <div class="field">
        <p>氏名 <%= @customer.last_name + @customer.first_name %></p>
      </div>
      <div class="field">
        <p>フリガナ <%= @customer.kana_last_name + @customer.kana_first_name %></p>
      </div>
      <div class="field">
        <p>郵便番号 <%= @customer.postcode %></p>
      </div>
      <div class="field">
        <p>住所 <%= @customer.address %></p>
      </div>
      <div class="field">
        <p>電話番号 <%= @customer.phone_number %></p>
      </div>
      <div class="field">
        <p>メールアドレス <%= @customer.email %></p>
      </div>
      <div class="field">
        <p>会員ステータス
          <% if @customer.is_deleted == false %>
            <i class="far fa-circle limegreen">有効</i>
          <% else %>
            <i class="fas fa-times lightgray">退会済</i>
          <% end %>
        </p>
      </div>
      <div class="action">
        <%= link_to "編集する",edit_admins_customer_path(@customer), class:"btn btn-success" %>
        <%= link_to "注文履歴一覧を見る",admins_root_path(@customer), class:"btn btn-info" %>
      </div>
    </div>
  </div>
</div>

