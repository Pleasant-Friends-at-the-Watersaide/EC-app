<div class="container">
  <div class="row mt-3">
    <div class="col-md-10">
      <h3>商品一覧</h3>
    </div>
    <div class="col-md-2">
      <%= link_to "", new_admins_item_path, class: "btn btn--circle btn--shadow fas fa-plus shadow-lg" %>
    </div>
  </div>

  <div class="row mt-3">
    <table class="table">
      <thead>
        <tr class="table-active">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル </th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to item.name, admins_item_path(item.id) %>
            </td>
            <td><%= (item.price).to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td>
                <% if item.is_active == false %>
                  <p class="far fa-circle limegreen">販売中</p>
                <% else %>
                  <p class="fas fa-times lightgray">販売停止中</p>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="mx-auto"><%= paginate @items %></div>
  </div>
</div>

