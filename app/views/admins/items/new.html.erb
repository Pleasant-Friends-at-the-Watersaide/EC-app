<div class="container">
  <div class="row">
    <div class="col mt-3">
      <h4>商品新規登録</h4>
    </div>
  </div>

  <%= form_with model: @item, url: admins_items_path,method: :post, local: true do |f| %>
  <div class="row">
    <div class="col">

       <div class="form-group row">
        <%= f.label :image,"商品画像",class: "col-sm-2 col-form-label" %>
        <%= f.attachment_field :image %>
      </div>

      <div class="form-group row">
        <%= f.label :name,"商品名",class: "col-sm-2 col-form-label" %>
        <%= f.text_field :name, autofocus: true, class: "form-control col-sm-5", placeholder: "商品名" %>
      </div>

      <div class="form-group row">
        <%= f.label :introduction,"商品説明",class: "col-sm-2 col-form-label" %>
        <%= f.text_area :introduction, autofocus: true, class: "form-control col-sm-5", placeholder: "ここに説明文を記述します" %>
      </div>

      <div class="form-group row">
        <%= f.label :genre,"ジャンル",class: "col-sm-2 col-form-label" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
      </div>

      <div class="form-group row">
        <%= f.label :price,"税抜価格",class: "col-sm-2 col-form-label" %>
        <%= f.text_field :price, autofocus: true, class: "form-control col-sm-5", placeholder: "1000" %>円
      </div>

      <div class="form-group row">
        <%= f.label :is_active,"販売ステータス",class: "col-sm-2 col-form-label" %>

        <%= f.radio_button :is_active, :"販売中", checked: true %>
        <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>

        <%= f.radio_button :is_active, :"販売停止中" %>
        <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>