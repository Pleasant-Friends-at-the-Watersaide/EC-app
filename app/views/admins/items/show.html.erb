<div class="container">
  <div class="row">
    <div class="col">
      <h4>商品詳細</h4>
        <div class="row">
          <div>
            <%= attachment_image_tag(@item, :image, fallback: "no_image.jpg", size:'250x200') %>
          </div>
          <div class=col>
            <table class="table">
              <tr>
                <td>商品名</td>
                <td><%= @item.name %></td>
              </tr>
              <tr>
                <td>商品説明</td>
                <td><%= @item.introduction %></td>
              </tr>
              <tr>
                <td>ジャンル</td>
                <td><%= @item.genre.name %></td>
              </tr>
              <tr>
                <td>税込価格(税抜価格)</td>
                <td><%= ((@item.price*1.10).to_i).to_s(:delimited) %>&nbsp;(<%= (@item.price).to_s(:delimited) %>)円</td>
              </tr>
              <tr>
                <td>販売ステータス</td>
                <td><%= @item.is_active %></td>
              </tr>
            </table>
            <%= link_to '編集する', edit_admins_item_path(@item), class: 'btn btn-success' %>
          </div>
        </div>
　  </div>
  </div>
</div>