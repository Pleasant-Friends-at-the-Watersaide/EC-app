<div class="container">
  <div class="row pt-3">
    <div class="col">
      <h4>商品詳細</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-3">
      <%= attachment_image_tag(@item, :image, fallback: "no_image.jpg", size:'250x200') %>
    </div>
    <div class=col-md-9>
      <table class="table">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格(税抜価格)</td>
          <td><%= ((@item.price*1.10).to_i).to_s(:delimited) %>&nbsp;(<%= (@item.price).to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
          <% if @item.is_active == false %>
            <i class="far fa-circle limegreen">販売中</i>
          <% else %>
            <i class="fas fa-times lightgray">販売停止中</i>
          <% end %>
          </td>
        </tr>
      </table>
      <%= link_to '編集する', edit_admins_item_path(@item), class: 'btn btn-success' %>
    </div>
  </div>
</div>