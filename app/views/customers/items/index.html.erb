<div class="container">
  <div class="row mt-5 mb-3">
    <div class="col-mb-8">
      <h2 style="font-family:serif;">商品一覧（全<%= @items_all.count %>件）</h2>
    </div>
  </div>
  <div class="row">
    <div class="d-flex flex-wrap col-md-12">
      <% @items.each do |item| %>
       <div class="col-md-4 mb-4">
         <div class="card shadow my-3 mx-2">
            <%= link_to item_path(item.id), 'data-turbolinks': false do %>
              <%= attachment_image_tag item, :image, :fill, 300, 250, fallback: "no_image.jpg", class:"card-img-top"; %><br>
            <% end %>  
            <div class="card-body text-center m-0 pt-1 pb-0 px-0" style= "background: linear-gradient(-10deg, rgba(246, 255, 0, .8), rgba(255, 0, 161, .8));">
              <%= link_to item_path(item.id), 'data-turbolinks': false, style: "font-size: 20px; color: #440000	;" do %>
              <b class="card-title", style="font-family:serif;"><%= item.name %></b>
              <% end %>
              <p class="text-right pr-3 mb-1", style="opacity: 0.6;"><%= item.price.to_s(:delimited, delimiter: ',') %>円</p>
            </div>
          </div>
       </div>
      <% end %>
    </div>
  </div>
  <div class="row mb-4">
    <div class="mx-auto"><%= paginate @items %></div>
  </div>
</div>