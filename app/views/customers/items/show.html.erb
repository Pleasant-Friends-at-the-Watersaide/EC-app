<div class="container">
  <div class="row pt-5">
    <div class="col">
      <%= attachment_image_tag @item, :image, :fill, 300, 300, fallback: "no_image.jpg", size:'380x300' %>
    </div>
    <div class="col p-5">
      <div>
        <h3 class="font-weight-bold"><%= @item.name %></h3>
        <p>[ 商品概要 ]<br><%= @item.introduction %></p>
      </div>
      <div class="mb-3">
        <strong class="h3"><%= ((@item.price * 1.10).floor).to_s(:delimited, delimiter: ',') %>円</strong>
        <span class="text-muted">(税込)</span>
      </div>
      <div>
        <%= form_with model: @cart_item, url: cart_items_path(item_id: @item), method: :post, local:true do |f| %>
          <%= f.select :quantity, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], class: "btn btn-light dropdown-toggle" %>
          <%= f.submit 'カートに入れる', class: 'btn btn-primary btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>