<div class="container">
  <div class="row">
    <div class="col-md-7 pt-3">
      <h4>
        マイページ
      </h4>

      <table class="table table-bordered">
        <div>
          <h5>
            登録情報
            <%= link_to '編集する', customers_edit_path, class: "btn btn-sm btn-success ml-2" %>
          </h5>
        </div>

        <tr>
          <th class="table-secondary">氏名</th>
          <td><%= @customer.last_name %>&nbsp;<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-secondary">カナ</th>
          <td><%= @customer.kana_last_name %>&nbsp;<%= @customer.kana_first_name %></td>
        </tr>
        <tr>
          <th class="table-secondary">郵便番号</th>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <th class="table-secondary">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-secondary">電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th class="table-secondary">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>

      <h5>
        配送先
        <%= link_to '一覧を見る', addresses_path, class: "btn btn-sm btn-primary ml-4" %>
      </h5>
      <h5>
        注文一覧
        <%= link_to '一覧を見る', orders_path, class: "btn btn-sm btn-primary ml-1" %>
      </h5>
    </div>
  </div>
</div>