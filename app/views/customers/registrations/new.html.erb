<div class="container">
  <div class="row mt-3">
    <h3>新規会員登録</h3>
  </div>

  <div class="row">
  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <%= f.label :last_name, "(姓)",class: "col-md-5 col-form-label" %>
      <%= f.text_field :last_name, autofocus: true, class: "form-control col-md-5" %>
      <%= f.label :first_name, "(名)",class: "col-md-5 col-form-label" %>
      <%= f.text_field :first_name, autofocus: true, class: "form-control col-md-5" %>
    </div>

    <div class="form-group row">
      <%= f.label :kana_last_name, "(セイ)",class: "col-md-5 col-form-label" %>
      <%= f.text_field :kana_last_name, autofocus: true, class: "form-control col-md-5" %>
      <%= f.label :kana_first_name, "(メイ)",class: "col-md-5 col-form-label" %>
      <%= f.text_field :kana_first_name, autofocus: true, class: "form-control col-md-5" %>
    </div>

    <div class="form-group row">
      <%= f.label :email,"メールアドレス",class: "col-md-5 col-form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-5", placeholder: "example@example.com" %>
    </div>

    <div class="form-group row">
      <%= f.label :postcode, "郵便番号(ハイフンなし)",class: "col-md-5 col-form-label" %>
      <%= f.text_field :postcode, autofocus: true, class: "form-control col-md-5", placeholder: "0001122" %>
    </div>

    <div class="form-group row">
      <%= f.label :address, "住所",class: "col-md-5 col-form-label" %>
      <%= f.text_field :address, autofocus: true, class: "form-control col-md-5" %>
    </div>

    <div class="form-group row">
      <%= f.label :phone_number, "電話番号(ハイフンなし)",class: "col-md-5 col-form-label" %>
      <%= f.text_field :phone_number, autofocus: true, class: "form-control col-md-5" %>
    </div>

    <div class="form-group row">
      <%= f.label :password, "パスワード(6文字以上)",class: "col-md-5 col-form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-md-5" %>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, "パスワード(確認用)",class: "col-md-5 col-form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-md-5" %>
    </div>

    <div class="actions row mx-auto">
      <div class="col">
        <%= f.submit "新規登録", class: "btn btn-success" %>  
      </div>
    </div>
    
    <div class="row mt-3">
      <div class="col-md-6">
        <h4>既に登録済みの方</h4>  
      </div>
    </div>
    <div class="row">
        <div class="col-md-6">
          <%- if controller_name != 'sessions' %>
            <%= link_to "こちら", new_session_path(resource_name) %>
          <% end %>
          からログインしてください
        </div>
      </div>
  <% end %>
  </div>
</div>


