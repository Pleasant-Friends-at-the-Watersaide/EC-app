<div class="container mt-4 mb-4">
  <h3>注文情報確認</h3>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @total = 0  %>
          <% @cart_items.each do |cart_item| %>
          <% @total = @total + (cart_item.item.price * 1.1).floor * cart_item.quantity %>
            <tr>
              <td class="text-left">
                <%= attachment_image_tag( cart_item.item, :image, size: "60x50", fallback: "no_image.jpg") %>
                <%= cart_item.item.name %>
              </td>
              <td class="text-right">
                <%= ((cart_item.item.price * 1.1).floor).to_s(:delimited, delimiter: ',') %>円
              </td>
              <td class="text-right">
                <%= cart_item.quantity %>
              </td>
              <td class="text-right">
                <%= ((cart_item.item.price * 1.1).floor * cart_item.quantity).to_s(:delimited, delimiter: ',') %>円
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <table class="table table-hover table-inverse table-bordered">
        <tr>
          <th class="info">送料</th>
          <td class="text-right">
            <%= @cost.shipping_cost %>円
          </td>
        </tr>
        <tr>
          <th class="info">商品合計</th>
          <td class="text-right">
            <%= @total.to_s(:delimited, delimiter: ',') %>円
          </td>
        </tr>
        <tr>
          <th class="info">請求金額</th>
          <td class="text-right">
            <%= (@total + @cost.shipping_cost).to_s(:delimited, delimiter: ',') %>円
          </td>
        </tr>
      </table>
    </div>
    <div class="col-xs-9 billing">
      <table class="table table-hover table-condensed table-bordered">
        <tr>
          <th  class="info">支払方法</th>
          <td class="text-left">
          </td>
        </tr>
        <tr>
          <th  class="info">お届け先</th>
          <td class="text-left">
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-5">
   <div class="mx-auto"><%= link_to "購入を確定する", orders_path, method: :post, class: 'btn btn-success col-mb-12' %></div>
  </div>
</div>