<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="head-line title_h3">注文情報入力</h3>

      <div class="col-xs-1">
        <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
          <h5 class="col-xs-3 sub-head">支払方法</h5>
            <div class="col-xs-10 radio">
             &emsp;&emsp;<%= f.radio_button :payment_method, 0, checked: true %>
             <span>クレジットカード </span>
            </div>
            <div class="col-xs-10 radio">
             &emsp;&emsp;<%= f.radio_button :payment_method, 1 %>
             <span>銀行振り込み</span>
            </div>

          <h5 class="col-xs-3 sub-head">お届け先</h5>
            <div class="col-xs-10 radio">
              &emsp;&emsp;<%= f.radio_button :addresses_text, "customers/address", checked: true %>
              <span>ご自身の住所</span><br>
                &emsp;&emsp;&emsp;<%= current_customer.postcode %><%= " " %> <%= current_customer.address %><br>
                &emsp;&emsp;&emsp;<%= current_customer.last_name + " " + current_customer.first_name %>
            </div>

            <% if @shipping_addresses != [] %>
            <div class="col-xs-10 radio">
              &emsp;&emsp;<%= f.radio_button :addresses_text, "addresses/address" %>
              <span>登録済住所から選択</span><br>
              &emsp;&emsp;&emsp;<%= f.collection_select(:addresses_id, @addresses, :id, :address) %>
            </div>
           <% end %>

            <div class="new-address col-xs-10 radio">
              &emsp;&emsp;<%= f.radio_button :addresses_text, "new_address" %>
              <span>新しいお届け先</span>
              <div class="form-group">
                &emsp;&emsp;&emsp;<%= f.label :"郵便番号", class: "col-xs-4 control-label" %>
                                  <%= f.text_field :postcode, class: "col-xs-4 form-control-static postcode" %>
              </div>
              <div class="form-group">
                &emsp;&emsp;&emsp;<%= f.label :"住所", class: "col-xs-4 control-label" %>
                                  <%= f.text_field :address, class: "col-xs-8 form-control-static address" %>
              </div>
              <div class="form-group">
                &emsp;&emsp;&emsp;<%= f.label :"宛名", class: "col-xs-4 control-label" %>
                                  <%= f.text_field :send_name, class: "col-xs-4 form-control-static name" %>
              </div>

              <div class="action">
                <%= f.submit "確認画面へ進む", class: "btn btn-success" %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>