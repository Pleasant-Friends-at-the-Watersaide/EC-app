<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="head-line title_h3">配送先編集</h3>
      <div id="error">
        <%= render "customers/shared/error_messages", resource: @address %>
      </div>

      <%= form_with model: @address, local: true do |f| %>
      <div class="address">
        <div class="form-group col-xs-12">
          <%= f.label :"郵便番号(ハイフンなし)",class: "col-xs-3 control-label" %>
          <%= f.text_field :postal_code ,class: "col-xs-2 form-control-static postal_code" %>
        </div>
        <div class="form-group">
          <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
          <%= f.text_field :address ,class: "col-xs-9 form-control-static address" %>
        </div>
        <div class="form-group">
          <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
          <%= f.text_field :name ,class: "col-xs-4 form-control-static name" %>
          <%= f.submit '変更内容を保存' ,class: "btn-sm btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>