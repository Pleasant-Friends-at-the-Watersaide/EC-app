<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="head-line title_h3">配送先登録/一覧</h3>
      <div id="error">
        <%= render "customers/shared/error_messages", resource: @address %>
      </div>
      <%= form_with model: @address, local: true do |f| %>
      <div class="address">
        <div class="form-group">
          <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3 control-label" %>
          <%= f.text_field :postal_code, class: "col-xs-2 form-control-static postal_code" %>
        </div>
        <div class="form-group">
          <%= f.label :"住所" ,class: "col-xs- control-label" %>
          <%= f.text_field :address, class: "col-xs-7 form-control-static address" %>
        </div>
        <div class="form-group">
          <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
          <%= f.text_field :name, class: "col-xs-4 form-control-static name" %>
          <%= f.submit '新規登録' ,class: "btn-sm btn-success" %>
        </div>
      </div>
      <% end %>

      <table class="table table-hover table-bordered">
        <thead>
          <tr class="info">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td class="text-left"><%= address.address %></td>
            <td class="text-left"><%= address.name %></td>
            <td><%= link_to "編集する",edit_address_path(address), class: "btn-sm btn-success" %></td>
            <td><%= link_to "削除する",address_path(address), method: :delete, data: { confirm: '本当に削除してもよろしいですか？' }, class: "btn-sm btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>