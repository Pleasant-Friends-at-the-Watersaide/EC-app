<div class="container">
  <div class="row pt-3">
    <div class="col-md-6 mx-auto">
      <h4>ログイン</h4>
      <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
        <div class="row mt-3">
          <div class="col">
            <div class="form-group row">
              <%= f.label :email, "メールアドレス", class: "col-md-4 col-form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-6" %>
            </div>
            <div class="form-group row">
              <%= f.label :password, "パスワード", class: "col-md-4 col-form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-md-6" %>
            </div>
          </div>
        </div>
        <div class="actions text-center">
          <%= f.submit "ログイン" , class: "btn btn-success"%>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-6 mx-auto">
      <h4>登録がお済でない方</h4>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "こちら", new_registration_path(resource_name) %>
        <strong>から新規登録を行ってください。</strong>
      <% end %>
    </div>
  
</div>