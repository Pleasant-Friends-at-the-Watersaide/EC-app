<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h4>ログイン</h4>

      <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label :password, "パスワード" ,class: "col-form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン" , class: "btn btn-success"%>
        </div>
      <% end %>

      <div class="col-xs-5">
        <h4>登録がお済でない方</h4>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "こちら", new_registration_path(resource_name) %>
          <strong>から新規登録を行ってください。</strong>
        <% end %>
      </div>

    </div>
  </div>
</div>