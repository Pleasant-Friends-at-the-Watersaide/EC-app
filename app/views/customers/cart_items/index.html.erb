<div class="container">
  <div class="row pt-4">
    <div class="col">
      <h4>ショッピングカート</h4>
    </div>
    <div class="col-3">
      <%= link_to 'カートを空にする', cart_items_all_destroy_path, method: :delete, class: "btn btn-sm btn-danger"%>
    </div>
  </div>

  <div class="row pt-4">
    <div class="col">
      <table class="table table-bordered">
        <tr class="table-active">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= ((cart_item.item.price * 1.10).floor).to_s(:delimited) %>
            </td>
            <td>
              <%= form_with model: cart_item, url: cart_item_path(cart_item), local:true do |f| %>
                <%= f.select :quantity, options_for_select((1..10).to_a, selected: cart_item.quantity) %>
                <%= f.submit '変更', class: 'btn btn-success' %>
              <% end %>
            </td>
            <td>
              <%= ((cart_item.item.price * 1.10).to_i * (cart_item.quantity).to_i).to_s(:delimited) %>
            </td>
            <td>
              <%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= link_to '買い物を続ける', root_path, class: "btn btn-primary" %>
    </div>
    <div class="col-3">
      <table class="table table-bordered">
        <tr>
          <th class="table-active">合計金額</th>
          <td><%= @total_price.floor.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col text-center">
      <%= link_to '情報入力に進む', new_order_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
